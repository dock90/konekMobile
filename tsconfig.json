{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitReturns": true,
    "strict": true,
    "target": "esnext",
    "rootDir": "./src",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "index.js",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  ]
}
